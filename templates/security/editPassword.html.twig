{% extends 'base.html.twig' %}

{% block title %}Profil de {% endblock %}

{% block body %}

<h1>Modifier mon mot de passe</h1>
{% for message in app.flashes('notice') %}
    <div class="alert-warning text-center mt-3 py-2">
        {{ message }}
        <i class="fa-solid fa-thumbs-up"></i>
    </div>
{% endfor %}
<section id="edit-profil" class="py-5" >
    
    {{ form_start(form, {'attr' : {'class' : 'd-flex flex-column gap-3'}} ) }}
    
        {{ form_row(form.password, {'label': 'Nouveau mot de passe :', 'attr' : {'class' : 'form-control' }} ) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe :', 'attr' : {'class' : 'form-control' }} ) }}
        
        <div class="d-none">
            {{ form_row(form.firstname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.lastname) }}
        </div>
        
        <input class="btn btn-success btn-action mt-3 m-auto" type="submit" value="Enregistrer la modification">
    {{ form_end(form)}}

    <div class="d-flex justify-content-center mt-5">
        <a href="{{path('app_profil') }}" class="btn btn-primary btn-action ">Revenir Ã  mon profil</a>
    </div>
</section>

{% endblock %}