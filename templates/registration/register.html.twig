{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'd-flex flex-column gap-4'}} ) }}
    <div class="input-container-register">
        {{ form_row(registrationForm.email, {'label': 'Email :', 'attr' : {'class' : 'form-control' }} ) }}
    </div>

        {{ form_row(registrationForm.firstname, {'label': 'Prénom :', 'attr' : {'class' : 'form-control' }} ) }}

        {{ form_row(registrationForm.lastname, {'label': 'Nom :', 'attr' : {'class' : 'form-control' }} )}}
    
    
        {{ form_row(registrationForm.roles, {'label': 'Choisissez un rôle :', 'attr' : {'class' : 'd-flex gap-1'}} )}}


    <div class="input-container-register">
        {{ form_row(registrationForm.plainPassword) }}
    </div>
        {{ form_row(registrationForm.agreeTerms) }}

        {{ form_row(registrationForm.recaptcha)}}
        {{ form_errors(registrationForm.recaptcha)}}

        <button type="submit" class="btn btn-primary btn-action d-block m-auto">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
